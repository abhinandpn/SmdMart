<script>
 function editCategory(categoryId) {
    // Fetch category details from the server and populate the modal form
    $('#editCategoryModal').modal('toggle')
    $.ajax({
        url: '/admin/getcategorybyid/' + categoryId,
        method: 'GET',
        success: function (category) {
            $('#editCategoryId').val(category._id);
            $('#editCategoryName').val(category.categoryName);
            $('#editDescription').val(category.description);
            $('#editErrorCategoryName').text('');
        },
        error: function (error) {
            console.error(error);
        }
    });
}


 function updateCategory() {
     const categoryId = $('#editCategoryId').val();
     const categoryName = $('#editCategoryName').val();
     const description = $('#editDescription').val();
     $('#editErrorCategoryName').text('');

     if (!categoryName) {
         $('#editErrorCategoryName').text('Please enter a category name');
         return;
     }

     $.ajax({
         url: '/admin/updatecategory/' + categoryId,
         method: 'PUT',
         contentType: 'application/json',
         data: JSON.stringify({ categoryName, description }),
         success: function (data) {
             console.log(data, 'category updated');
             $('#editCategoryModal').modal('hide');
             updateCategoryTable();
         },
         error: function (error) {
             console.error(error);
         }
     });
 }


 

 
</script>



